--statusbar-warning-bg: #E65100;
--statusbar-warning-fg: #FFFFFF;
--statusbar-critical-bg: #B71C1C;
--statusbar-critical-fg: #FFFFFF;

/* Matplotlib Plot Colors */
matplotlib_border_normal: 1px solid #616161;
matplotlib_container_bg: #FFFFFF;
plot_font_size: 10;
plot_font_family: 'Inter';
matplotlib_figure_facecolor: #FFFFFF;
matplotlib_axes_facecolor: #F5F5F5;
matplotlib_edgecolor: #616161;
matplotlib_label_color: #424242;
matplotlib_tick_color: #757575;
