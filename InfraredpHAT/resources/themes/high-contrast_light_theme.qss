--groupbox-border-color: #616161;
--groupbox-title-color: #424242;
--groupbox-border-radius: 8;
--tabwidget-pane-bg: #F5F5F5;
--tabwidget-pane-border-width: 1;
--tabwidget-pane-border-style: solid;
--tabwidget-pane-border-color: #616161;
--tab-bg-normal: #E0E0E0;
--tab-color-normal: #424242;
